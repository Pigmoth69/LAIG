<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<SCENE>

	<INITIALS>
	    <frustum near="15" far="15"/>                      <!-- frustum planes-->
	    <translate x="10" y="10" z="50" />                 <!-- initial translate -->
	    <rotation axis="x" angle="90" />                  <!-- initial rotation 3 -->
	    <rotation axis="y" angle="90" />                  <!-- initial rotation 2 -->
	    <rotation axis="z" angle="180" />                  <!-- initial rotation 1 -->
	    <scale sx="1" sy="1" sz="1" />                  <!-- initial scaling -->
	    <reference length="10" />                          <!-- axis length; "0" means no axis-->
	</INITIALS>


	<ILLUMINATION>
	    <ambient r="0" g="0" b="0" a="0" />            <!-- global ambient -->
	    <doubleside value="1" />                          <!-- double or single side illum. -->
	    <background r="1" g="1" b="0" a="1" />         <!-- background color -->
	</ILLUMINATION>
	

	<LIGHTS>
	    <LIGHT id="L1">                                    <!-- light identifier -->
	        <enable value ="1" />                         <!-- enable/disable -->
	        <position x="0.5" y="0.5" z="1" w="1" />       <!-- light position -->
	        <ambient r="0" g="0" b="0" a="1" />        <!-- ambient component -->
	        <diffuse r="0.9" g="0.9" b="0.9" a="1" />        <!-- diffuse component -->
	        <specular r="0.5" g="0.5" b="0.5" a="1" />       <!-- specular component -->
		</LIGHT>

		<LIGHT id="L2">                                    <!-- light identifier -->
	        <enable value ="1" />                          <!-- enable/disable -->
	        <position x="2" y="2" z="-2" w="0.1" />       <!-- light position -->
	        <ambient r="0" g="0" b="0" a="1" />        <!-- ambient component -->
	        <diffuse r="0.9" g="0.9" b="0.9" a="1" />        <!-- diffuse component -->
	        <specular r="0.5" g="0.5" b="0.5" a="1" />       <!-- specular component -->
		</LIGHT>

	    <!-- NOTE: this block "LIGHT" must be repeated as necessary with different "id" -->
	    
	</LIGHTS>


	<TEXTURES>
	    <TEXTURE id="T1">
	        <file path="#" />                             <!-- path to file -->
	        <amplif_factor s="1" t="1" />                <!-- x/s, y/t -->
	    </TEXTURE>

	    <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
	    
	</TEXTURES> 


	<MATERIALS>
	    <MATERIAL id="M1">                                  
	        <shininess value="1" />
	        <specular r=".2" g=".3" b=".4" a=".5" />        <!-- specular reflection -->
	        <diffuse r=".2" g=".3" b=".4" a=".5" />         <!-- diffuse reflection -->
	        <ambient r=".2" g=".3" b=".4" a=".5" />         <!-- ambient reflection -->
	        <emission r=".2" g=".3" b=".4" a=".5" />        <!-- emission component -->
	    </MATERIAL>

	    <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material requires a distinct "id" -->

	</MATERIALS>


</SCENE> 